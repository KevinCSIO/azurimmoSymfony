{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="form-card">
        <h2>Connexion</h2>

        {% if error %}
            <div class="alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post">
            <div>
                <label for="username">Email</label>
                <input type="email" name="_username" id="username" value="{{ last_username }}" required autofocus />
            </div>

            <div>
                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" required />
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

            <div class="form-actions">
                <button class="btn btn-primary" type="submit">Se connecter</button>
            </div>
        </form>

        <p class="account-msg">
            Pas encore de compte ? <a href="{{ path('app_register') }}">Inscrivez-vous ici</a> !
        </p>
    </div>
{% endblock %}
